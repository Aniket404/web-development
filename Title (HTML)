// search engines
 
 <form action="https://www.youtube.com/results">    
  <input type="text" name="search_query">        // remember name is different for different search engines search_query for youtube q for reddit etcetc
  <button>search youtube</button>
  </form>
  
// select command such as arrow and below it'll be displayed options

<form action="/identify">
  <label for="identify animal">identify animal</label>
  <select  name="pets" id="pet select"> 
  <option value="dog" >dog</option>
  <option value="cat">cat</option>                                           // remember value should be used so that it comes in search url
  <option value="fish">fish</option>
  <option value="chicken">chicken</option>
</select>
  <button>submit</button>
</form>

